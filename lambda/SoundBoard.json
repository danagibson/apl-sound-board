{
    "type": "APL",
    "version": "1.4",
    "extensions": 
        [
        ],
    "settings": {},
    "import": 
        [
            {
                "name": "alexa-layouts",
                "version": "1.2.0"
            }
        ],
    "resources": [],
    "styles": {},
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {},
    "mainTemplate": 
        {
            "parameters": 
                [
                    "payload"
                ],
            "item": 
                [
                    {
                        "type": "Container",
                        "height": "100vh",
                        "items": 
                            [
                                {
                                    "type": "AlexaBackground",
                                    "backgroundImageSource": "https://d2o906d8ln7ui1.cloudfront.net/images/LT2_Background.png",
                                    "backgroundBlur": false,
                                    "colorOverlay": true,
                                    "backgroundScale": "best-fill"
                                },
                                {
                                    "type": "Container",
                                    "height": "100vh",
                                    "width": "100vw",
                                    "items":
                                        [
                                            {
                                                "type": "AlexaHeader",
                                                "headerTitle": "${context.System.device.supportedInterfaces}",
                                                "headerAttributionImage": "https://danainsd.s3.amazonaws.com/SDAE_freeform_logo.png",
                                                "headerDivider": false
                                            },
                                            {
                                                "type": "Container",
                                                "width": "100%",
                                                "height": "70%",
                                                "justifyContent": "start",
                                                "alignItems": "center",
                                                "paddingLeft": "@marginHorizontal",
                                                "paddingRight": "@marginHorizontal",
                                                "items": 
                                                    [
                                                        {
                                                            "type": "Container",
                                                            "justifyContent": "center",
                                                            "item": 
                                                                {
                                                                    "type": "AlexaButton",
                                                                    "id": "cricketButton",
                                                                    "alignSelf": "center",
                                                                    "buttonText": "Crickets!",
                                                                    "primaryAction": 
                                                                        [
                                                                            {
                                                                                "type": "SendEvent",
                                                                                "componentId": "cricketButtonId",
                                                                                "arguments": [
                                                                                                "cricket"
                                                                                             ]
                                                                            }
                                                                        ]
                                                                }
                                                        },
                                                        {
                                                            "type": "Container",
                                                            "justifyContent": "center",
                                                            "item": 
                                                                {
                                                                    "type": "AlexaButton",
                                                                    "id": "rimshotButton",
                                                                    "alignSelf": "center",
                                                                    "buttonText": "RimShot!",
                                                                    "primaryAction": 
                                                                        [
                                                                            {
                                                                                "type": "SendEvent",
                                                                                "componentId": "rimshotButtonId",
                                                                                "arguments": [
                                                                                                "rimshot"
                                                                                             ]
                                                                            }
                                                                        ]
                                                                }
                                                        },
                                                        {
                                                            "type": "Container",
                                                            "justifyContent": "center",
                                                            "item": 
                                                                {
                                                                    "type": "AlexaButton",
                                                                    "id": "gollumButton",
                                                                    "alignSelf": "center",
                                                                    "buttonText": "Gollum!!",
                                                                    "primaryAction": 
                                                                        [
                                                                            {
                                                                                "type": "SendEvent",
                                                                                "componentId": "gollumButtonId",
                                                                                "arguments": [
                                                                                                "gollum"
                                                                                             ]
                                                                            }
                                                                        ]
                                                                }
                                                        },
                                                        {
                                                            "type": "Container",
                                                            "justifyContent": "center",
                                                            "item": 
                                                                {
                                                                    "type": "AlexaButton",
                                                                    "id": "villainButton",
                                                                    "alignSelf": "center",
                                                                    "buttonText": "Villain!",
                                                                    "primaryAction": 
                                                                        [
                                                                            {
                                                                                "type": "SendEvent",
                                                                                "componentId": "villainButtonId",
                                                                                "arguments": [
                                                                                                "villain"
                                                                                             ]
                                                                            }
                                                                        ]
                                                                }
                                                        },
                                                        {
                                                            "type": "Container",
                                                            "justifyContent": "center",
                                                            "item": 
                                                                {
                                                                    "type": "AlexaButton",
                                                                    "id": "voiceButton",
                                                                    "alignSelf": "center",
                                                                    "buttonText": "Voice!",
                                                                    "primaryAction": 
                                                                        [
                                                                            {
                                                                                "type": "SendEvent",
                                                                                "componentId": "voiceButtonId",
                                                                                "arguments": [
                                                                                                "voice"
                                                                                             ]
                                                                            }
                                                                        ]
                                                                }
                                                        }
                                                    ]
                                            }
                                        ]
                                }
                            ]
                    }
                ]
        }
}